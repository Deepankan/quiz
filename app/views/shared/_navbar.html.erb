<header>

<% time = Time.diff(Time.parse(session['time'].to_s), Time.parse(Time.now.to_s)) %>
<%@minute  = time[:minute]%>
<%@second  = time[:second]%>
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to surveys_path, class: 'navbar-brand' do %>
          <%= render 'shared/rr_logo' %>
        <% end -%>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
        <% if can? :all, current_user %>
          <li class="<%= is_active?(surveys_path) %>">
            <%= link_to surveys_path do %>
              All Test
              <span class='badge'> <%= surveys_count %> </span>
            <% end -%>
          </li>
          <li class="dropdown <%= is_active?(new_survey_path) %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">New survey <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <!-- <li> < %= link_to 'Opinion Poll', new_survey_path(type: 'poll') %> </li> -->
              <li> <%= link_to 'Create Test', new_survey_path(type: 'quiz') %> </li>
              <li> <%= link_to 'Score Check', get_score_path %> </li>
              <li><!-- <#%= countdown Time.now  %> --></li>
            </ul>
          </li>
        </ul>
        
        
        <%end%>

        
        <% if current_user %>
          <ul class="nav navbar-nav navbar-right">
           <%if current_user.user_type == CLIENT%>
             <li><div id="countdowntimer"><span id="ms_timer"><span></div></li>
           <%end%>  
            <li>
              <p class="navbar-text">
                Logged in as:
               
                <b> <%= current_user.name %> </b>
                <!-- <#%= link_to '(change name)', '#', 'data-toggle': 'modal', 'data-target': '#submit-name-modal' %> -->
              </p>
            </li>
            <li>
              <p class="navbar-text">
                
                
                <%= link_to(t('.logout'), destroy_user_session_path, class: "icon-logout" , method: :delete) %>
              </p>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'shared/gem_header_info' %>
</header>
 <script type="text/javascript">
$(function(){
  $("#ms_timer").countdowntimer({
                 minutes : '<%= @minute%>',
                seconds : '<%= @second%>'
             
  });
});
 </script>
